<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"   
             xmlns:sflistview="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:local="clr-namespace:ExpanderMAUI"
             x:Class="ExpanderMAUI.MainPage">
    <ContentPage.BindingContext>
        <local:ViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid x:Name="mainGrid" BackgroundColor="#F0F0F0" Padding="4">
            <sflistview:SfListView x:Name="listView" BackgroundColor="Aquamarine" AutoFitMode="DynamicHeight" ItemsSource="{Binding ContactsInfo}">
                <sflistview:SfListView.ItemTemplate>
                    <DataTemplate>
                        <Frame x:Name="frame" CornerRadius="2" Padding="{OnPlatform Android=50, iOS=1,  WinUI=0}" Margin="{OnPlatform Android=1, iOS=1,  WinUI=0}"  HasShadow="{OnPlatform Android=true, iOS=false, WinUI=true}">
                            <Grid Padding="{OnPlatform Android=2, iOS=2, WinUI=0}" Margin="{OnPlatform Android=1, iOS=1,  WinUI=0}" BackgroundColor="Red" HeightRequest="50" >
                                <local:ExtendedExpander x:Name="expander" ListView="{x:Reference listView}" HeaderIconPosition="None" IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                                    <local:ExtendedExpander.Header>
                                        <Grid x:Name="grid" VerticalOptions="FillAndExpand" BackgroundColor="White" HorizontalOptions="FillAndExpand" RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <Grid RowSpacing="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="60" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Row="0" Grid.Column="0">
                                                    <Image HeightRequest="45" Margin="5,0,0,0" WidthRequest="45" Source="{Binding ContactImage}" VerticalOptions="Center" HorizontalOptions="Center" />
                                                </Grid>
                                                <Grid Grid.Row="0" Grid.Column="1" RowSpacing="1" Padding="5" VerticalOptions="Center">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Label Grid.Row="0" LineBreakMode="NoWrap" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" TextColor="#474747" Text="{Binding ContactName}" 
                                                               FontSize="{OnPlatform Android={OnIdiom Phone=16, Tablet=18}, iOS={OnIdiom Phone=16, Tablet=18}, WinUI={OnIdiom Phone=18, Tablet=20, Default=20}}"/>
                                                    <Label Grid.Row="1" TextColor="#474747" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" LineBreakMode="NoWrap" Text="{Binding CallTime}"
                                                               FontSize="{OnPlatform Android={OnIdiom Phone=12, Tablet=14}, iOS={OnIdiom Phone=12, Tablet=14},  WinUI={OnIdiom Phone=12, Tablet=12, Default=12}}"/>
                                                </Grid>
                                                <Grid Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Image Source="{Binding PhoneImage}" Opacity="0.60" HeightRequest="20" WidthRequest="20" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" />
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </local:ExtendedExpander.Header>
                                    <local:ExtendedExpander.Content>
                                        <Grid ColumnSpacing="0" RowSpacing="0" Grid.Row="1" BackgroundColor="White"
                                                  HorizontalOptions="FillAndExpand" Padding="{OnPlatform Android=5, iOS=5,  WinUI=0}" VerticalOptions="FillAndExpand">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions >
                                                <ColumnDefinition Width="50" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="LightGray" />
                                            <Image Grid.Row="1" Grid.Column="0" Source="{Binding NewContact}" Opacity="0.60" WidthRequest="20" HeightRequest="20"
                                                       HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                                            <Image Grid.Row="2" Grid.Column="0" Source="{Binding AddContact}" Opacity="0.60" WidthRequest="20" HeightRequest="20"
                                                       HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                                            <Image Grid.Row="3" Grid.Column="0" Source="{Binding SendMessage}" Opacity="0.60" WidthRequest="20" HeightRequest="20"
                                                       HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                                            <Image Grid.Row="4" Grid.Column="0" Source="{Binding BlockSpan}" Opacity="0.60" WidthRequest="20" HeightRequest="20"
                                                       HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                                            <Image Grid.Row="5" Grid.Column="0" Source="{Binding CallDetails}" Opacity="0.60" WidthRequest="20" HeightRequest="20"
                                                       HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                                            <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="LightGray" />
                                            <Label Grid.Row="1" Grid.Column="1" Text="Create new contact" TextColor="#000000" FontSize="14" HorizontalOptions="Start"
                                                       VerticalOptions="Center" Opacity="87"/>
                                            <Label Grid.Row="2" Grid.Column="1" Text="Add to a contact" TextColor="#000000" FontSize="14" HorizontalOptions="Start"
                                                       VerticalOptions="Center" Opacity="87"/>
                                            <Label Grid.Row="3" Grid.Column="1" Text="Send a message" TextColor="#000000" FontSize="14" HorizontalOptions="Start"
                                                       VerticalOptions="Center" Opacity="87"/>
                                            <Label Grid.Row="4" Grid.Column="1" Text="Block/report Spam" TextColor="#000000" FontSize="14" HorizontalOptions="Start"
                                                       VerticalOptions="Center" Opacity="87"/>
                                            <Label Grid.Row="5" Grid.Column="1" Text="Call details" TextColor="#000000" FontSize="14" HorizontalOptions="Start"
                                                       VerticalOptions="Center" Opacity="87"/>
                                        </Grid>
                                    </local:ExtendedExpander.Content>
                                </local:ExtendedExpander>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </sflistview:SfListView.ItemTemplate>
            </sflistview:SfListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
